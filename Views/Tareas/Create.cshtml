@model Proyecto.Models.Tarea

<h2 class="fw-bold mb-4">Crear Nueva Tarea</h2>

<form asp-action="Create">
    <div class="form-group mb-3">
        <label asp-for="NombreTarea" class="form-label custom-label">Nombre de la Tarea</label>
        <input asp-for="NombreTarea" class="form-control" placeholder="Ingrese el nombre de la tarea" />
        <span asp-validation-for="NombreTarea" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control" rows="4" placeholder="Ingrese una descripción de la tarea"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Estado de la Tarea</label>
        <select asp-for="EstadoTareaId" class="form-select">
            <option value="">Seleccione un estado</option>
            @* Aquí se llena con los elementos de ViewBag *@
            @foreach (var item in ViewBag.EstadoTareaId)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
        <span asp-validation-for="EstadoTareaId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Proyecto</label>
        <select asp-for="ProyectoId" class="form-select">
            <option value="">Seleccione un proyecto</option>
            @* Aquí se llena con los elementos de ViewBag *@
            @foreach (var item in ViewBag.ProyectoId)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
        <span asp-validation-for="ProyectoId" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label>Nombre del Usuario</label>
        <select asp-for="UsuarioId" class="form-select">
            <option value="">Seleccione un usuario</option>
            @* Aquí se llena con los elementos de ViewBag *@
            @foreach (var item in ViewBag.UsuarioId)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>

    <div>
        <button type="submit" class="btn btn-primary btn-lg">Crear Tarea</button>
    </div>
</form>
