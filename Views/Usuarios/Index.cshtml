@model IEnumerable<Proyecto.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container-fluid mt-4">
    <h1 class="text-center mb-4">Lista de Usuarios</h1>

    <p class="text-center">
        <a asp-action="Create" class="btn btn-primary btn-lg">Crear Nuevo Usuario</a>
    </p>

    <table class="table table-striped table-hover mt-4">
        <thead class="table-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Nombre) <!-- Usamos First() para evitar error si la colección está vacía -->
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Correo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Rol.NombreRol) <!-- Cambiar aquí para mostrar el nombre del rol -->
                </th>
                <th class="text-center" style="width: 15%;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Correo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rol.NombreRol) <!-- Mostrar el nombre del rol -->
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group" aria-label="Acciones">
                                <a asp-action="Edit" asp-route-id="@item.UsuarioId" class="btn btn-warning btn-sm">
                                    Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.UsuarioId" class="btn btn-info btn-sm">
                                    Detalles
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.UsuarioId" class="btn btn-danger btn-sm">
                                    Eliminar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No hay usuarios registrados.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
